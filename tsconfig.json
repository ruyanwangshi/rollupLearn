{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./declar"
  },
  "declaration": "true",
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}